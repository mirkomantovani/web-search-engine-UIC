						<div class="et_pb_slide_description">
							<h2 class="et_pb_slide_title">Promoting empowerment of minority individuals with disabilities</h2>
				<div class="et_pb_slide_content"></div>
							
						</div> <!-- .et_pb_slide_description -->
					</div>
				</div> <!-- .et_pb_container -->
				
			</div> <!-- .et_pb_slide -->
			 
