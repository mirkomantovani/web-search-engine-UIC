    function pageLoad() { var tree = $find("ctl00_cphLeftNav_T559DDE7C006_ctl00_ctl00_siteMapControl_verticaltree"); if (tree) { var location = window.location.pathname; location = location.substring(location.lastIndexOf('/') + 1); var currentNode = tree.findNodeByUrl(location); if (currentNode) { currentNode.set_selected(true); ExpandParent(currentNode); currentNode.set_expanded(true) } } } function CollapseSiblings(node) { var parent = node.get_parent(); var siblings = parent.get_nodes(); var siblingsCount = siblings.get_count(); for (var nodeIndex = 0; nodeIndex < siblingsCount; nodeIndex++) { var siblingNode = siblings.getNode(nodeIndex); if ((siblingNode != node) && (siblingNode.get_expanded())) { siblingNode.collapse(); return } } } function OnClientNodeExpanding(sender, args) { var node = args.get_node(); if (node.get_nodes().get_count()) { CollapseSiblings(node) } } function ExpandParent(node) { node = node.get_parent(); while (node != null) { if (node.expand) { node.expand() } node = node.get_parent() } }
</script>


</div><div class='sfContentBlock'><div class="vote_button"><span data-sfref="[images|OpenAccessDataProvider]946660bf-cc65-674c-864b-ff00008e5f8f" class="sfImageWrapper"><a href="https://aast.uic.edu/docs/default-source/newsletter/january2018.pdf?sfvrsn=dcfdc636_6" target="_blank"><img width="195" height="70" src="/images/default-source/layout/aast-newsletter.jpg?sfvrsn=d475c736_4" title="AAST Bulletin" style="border-radius: 10px; box-shadow: 0px 0px 6px -2px #333333; margin: 20px;" alt="AAST Bulletin" displaymode="Original" /></a><br />
